<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fechaSolicitud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha Solicitud"
                        android:textSize="@dimen/textoTitulo"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtFechaSolicitud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha de Solicitud"
                        android:layout_marginStart="10dp"
                        android:textSize="@dimen/textoDescripcion"
                        android:textColor="@color/colorAccent"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/servicio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Servicio"
                        android:textSize="@dimen/textoTitulo"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtServicio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descripcion de servicio correspondiente"
                        android:layout_marginStart="10dp"
                        android:textSize="@dimen/textoDescripcion"
                        android:textColor="@color/colorAccent"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fechaInicio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha Inicio"
                        android:textSize="@dimen/textoTitulo"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtFechaInicio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha de Inicio"
                        android:layout_marginStart="10dp"
                        android:textSize="@dimen/textoDescripcion"
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/fechaFin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha Inicio"
                        android:layout_marginStart="10dp"
                        android:textSize="@dimen/textoTitulo"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtFechaFin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha de Fin"
                        android:layout_marginStart="10dp"
                        android:textSize="@dimen/textoDescripcion"
                        android:textColor="@color/colorAccent"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtOptionPulse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#8942;"
                    android:textSize="@dimen/textoOpcion"
                    android:layout_gravity="bottom|end"
                    android:paddingLeft="@dimen/activity_horizontal_margin"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>