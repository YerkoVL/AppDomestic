<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorFondoDefault"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="38dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textoTituloPantalla"
        android:text="Califica Servico"
        android:textStyle="bold"
        android:textColor="@color/colorTexto"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El servicio de "/>

        <TextView
            android:id="@+id/txtNombrePersonal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/textoTitulo"/>

    </LinearLayout>

    <RadioGroup
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/rdbExcelente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:textColor="@color/colorTexto"
            android:text="Excelente" />

        <RadioButton
            android:id="@+id/rdbMuyBueno"
            android:text="My Bueno"
            android:textColor="@color/colorTexto"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rdbBueno"
            android:text="Bueno"
            android:button="@null"
            android:textColor="@color/colorTexto"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rdbMalo"
            android:text="Malo"
            android:button="@null"
            android:textColor="@color/colorTexto"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rdbMuyMalo"
            android:text="Muy Malo"
            android:button="@null"
            android:textColor="@color/colorTexto"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comentario"
        android:gravity="left"
        android:textColor="@color/colorTexto"/>

    <EditText
        android:id="@+id/txtComentarios"
        android:inputType="textMultiLine"
        android:lines="2"
        android:minLines="2"
        android:gravity="top|left"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:scrollbars="vertical"/>
    </LinearLayout>

</RelativeLayout>